<div class="fix_body">
  <div class="container">
    <div class="row">
      <div class="col-4">
        <div class="name_place fix_center">
          <%= t ".review" %>
        </div><br>
        <%= @place.comments.count %> <%= t ".comment" %><br><br>
        <% if logged_in? %>
          <%= render "comments/comment_form", commentable: @commentable, comment_new: @comment, parent_id:nil %>
        <% end %>
        <%= comments_tree_for @commentable.comments.hash_tree(limit_depth: 2), @commentable, @comment %>
      </div>
      <div class="col-8">
        <div class="name_place fix_center">
          <%= @place.name %>
        </div><br>
        <%= image_tag @place.photo.url, class:"fix_img_show" %><br><br>
        <span class="item">
          <%= t ".description" %>
        </span><%= @place.description %><br>
        <span class="item">
          <%= t ".evaluate" %>
        </span><% @place.vote.times do %>
          <img class="fix_star" src="/assets/star1.png">
        <% end %>
        <% (5 - @place.vote).times do %>
          <img class="fix_star" src="/assets/star2.png">
        <% end %><br>
        <span class="item">
          <%= t ".district" %>
        </span><%= @place.district.name %><br>
        <span class="item">
          <%= t ".address" %>
        </span><%= @place.address %><br>
        <span class="item">
          <%= t ".cost" %>
        </span><%= @place.cost %><br>
      </div>
    </div><br>
    <div class="row">
      <div class="col-5 horizontal"></div>
      <div class="col-2 text-center">
        <h2><%= "Related Blogs" %></h2>

      </div>
      <div class="col-5 horizontal"></div>
         <% @blogs.each do |blog| %>
    <div class="box">
      <div class="cover_photo_blog_index">
        <%= image_tag blog.cover_photo.to_s, class: "img_thumbnail" %>
      </div>
      <div class="post-article">
        <span><%= link_to blog.topic, blog, class: "topic_blog crop_text_2" %> </span>
      </div>
    </div>
  <% end %>
    </div>
  </div>
</div>
