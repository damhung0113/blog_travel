<div class="row">
  <div class="col-4">
    <%= image_tag place.photo.url, class: "photo" %>
  </div>
  <div class="col-8">
    <div class="name_place">
      <%= place.name %>
    </div>
    <span class="item">
      <%= t ".evaluate" %>
    </span><% place.vote.times do %>
      <img class="fix_star" src="/assets/star1.png">
    <% end %>
    <% (5 - place.vote).times do %>
      <img class="fix_star" src="/assets/star2.png">
    <% end %><br>
    <span class="item">
      <%= t ".district" %>
    </span><%= place.district.name %><br>
    <span class="item">
      <%= t ".address" %>
    </span><%= place.address %><br>
    <span class="item">
      <%= t ".cost" %>
    </span><%= place.cost %><br>
    <%= render "bookmarks/form_bookmark", place: place %>
    <%= link_to t(".see"), place_path(place) %><br>
    <% if logged_in? && current_user.is_admin? %>
      <i class="fa fa-trash"></i>
      <%= link_to t(".delete"), place, method: :delete,
        data: { confirm: t(".sure") } %>
      <i class="fa fa-wrench"></i>
      <%= link_to t(".edit"), edit_place_path(place) %>
    <% end %>
    <%= link_to t(".delete"), place, method: :delete,
      data: { confirm: t(".sure") } %>
    <%= link_to t(".edit"), edit_place_path(place) %>
    <%= render "bookmarks/form_bookmark", place: place %>
  </div>
</div><hr>
