<section class="signup">
  <div class="container-sign">
    <div class="signup-content">
      <div class="signup-form">
        <h2 class="form-title"><%= t(".title") %></h2>
        <%= form_for(:session, url: login_path) do |f| %>
          <div class="form-group">
            <%= f.email_field :email, value: params[:param], class: "form-control",placeholder: t(".email") %>
          </div>
          <div class="form-group">
            <%= f.password_field :password, class: "form-control",placeholder: t(".password") %>
          </div>
          <div class="form-group">
            <%= f.label :remember_me, class: "checkbox-inline" do %>
              <%= f.check_box :remember_me ,class: "checkbox-custom" %>
              <span><%= t(".remember") %></span>
            <% end %>
          </div>
          <div class="form-group">
            <%= f.submit t(".login"), class: "btn btn-primary" %>
          </div>
        <% end %>
        <div>
          <div>
            <span class="social-label"><%= t(".loginwith") %></span>
            <%= link_to "/auth/facebook" do %>
              <i class="fa fa-facebook-official fa-3x mt-3" aria-hidden="true"></i>
            <% end %>
          </div>
            <%= t(".new") %>
            <%= link_to t(".sign_up"), signup_path %>
        </div>
      </div>
    </div>
  </div>
</section>
