<div class="container">
  <div class="row">
    <div class="col-4 horizontal">
    </div>
    <div class="col-4 p-0 mb-3">
      <h3 class="title"><%= t ".last_blog" %></h3>
    </div>
    <div class="col-4 horizontal">
    </div>
  </div>
  <% @blogs.each do |blog| %>
    <div class="box">
      <div class="cover_photo_blog_index">
        <%= image_tag blog.cover_photo.to_s, class: "img_thumbnail" %>
      </div>
      <div class="post-article">
        <span><%= link_to blog.topic, blog, class: "topic_blog crop_text_2" %></span>
      </div>
    </div>
  <% end %>
  <div class="view_more">
    <%= link_to t(".view_more"), blogs_path %>
  </div>
  <div class="row">
    <div class="col-4 horizontal">
    </div>
    <div class="col-4 p-0 mb-3">
      <h3 class="title"><%= t ".last_place" %></h3>
    </div>
    <div class="col-4 horizontal">
    </div>
  </div>
  <% @places.each do |place| %>
    <div class="box">
      <div class="cover_photo_blog_index">
        <%= image_tag place.photo.to_s, class: "img_thumbnail" %>
      </div>
      <div class="post-article">
        <span><%= link_to place.name, place, class: "topic_blog crop_text_2" %></span>
      </div>
    </div>
  <% end %>
</div>
