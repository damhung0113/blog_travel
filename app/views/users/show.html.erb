<% provide :title, !@user.nil? ? @user.name : t(".not_exits") %>
<div class="container">
  <div class="row">
    <aside class="col-md-4">
      <div class="text-center">
        <% if @user %>
          <div class="mb-4">
            <%= display_avatar @user, 180 %>
          </div>
          <h3><%= @user.name %></h3>
          <%= render "follow_form" if logged_in? %>
          <div class="horizontal">
          </div>
        <% end %>
      </div>
      <div class="ml-3">
        <i class="fa fa-file mr-3" aria-hidden="true"></i>
        <%= "Tác giả của" %>
        <%= @user.blogs.count %>
        <%= "Blog" %><br>
        <i class="fa fa-users mr-3 mt-3" aria-hidden="true"></i>
        <%= "There are" %>
        <strong id="followers">
          <%= @user.followers.size %>
        </strong>
        <%= "followers" %><br>
        <i class="fa fa-users mr-3 mt-3" aria-hidden="true"></i>
        <%= "Following" %>
        <strong id="following">
          <%= @user.following.size %>
        </strong>
        <%= "people" %><br>
      </div>
    </aside>
    <aside class="col-md-8">
      <div class="">
          <ul class="nav nav-tabs" role="tablist">
            <li class="nav-item">
              <a class="nav-link active" data-toggle="tab" href="#myblogs">
                <%= "My Blogs" %>
                (<%= @user.blogs.count %>)
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" data-toggle="tab" href="#follow">
                <%= "Followers" %>
                (<%= @user.followers.count %>)
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" data-toggle="tab" href="#bookmark">
                <%= "Bookmark" %>
                (<%= @user.bookmarks.count %>)
              </a>
            </li>
          </ul>
          <div class="tab-content">
            <div id="myblogs" class="container tab-pane active"><br>
              <%= render "blogs/blog_user" %>
            </div>
            <div id="follow" class="container tab-pane fade"><br>
              <%= render "show_follow" %>
            </div>
            <div id="bookmark" class="container tab-pane fade"><br>
              <%= render "bookmarks/all_bookmark" %>
            </div>
          </div>
        </div>
    </aside>
  </div>
</div>
